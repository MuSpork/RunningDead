<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="net.ricky.runningdead.LearnToPlay">

    <TextView android:text="@string/learn_to_play"
        android:layout_centerHorizontal="true"
        android:textSize="32sp"
        android:layout_width="wrap_content"
        android:id="@+id/LearnToPlay"
        android:layout_height="wrap_content" />

    <TextView android:text="@string/learning_1"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:id="@+id/Learning1" />

    <TextView android:text="@string/learning_2"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Learning1"
        android:paddingTop="16dp"
        android:id="@+id/Learning2" />

    <TextView android:text="@string/learning_3"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Learning2"
        android:paddingTop="16dp"
        android:id="@+id/Learning3" />

    <TextView android:text="@string/learning_4"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Learning3"
        android:paddingTop="16dp"
        android:id="@+id/Learning4" />

    <TextView android:text="@string/learning_5"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Learning4"
        android:paddingTop="16dp"
        android:id="@+id/Learning5" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/next_button2"
        android:id="@+id/NextButton2"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
