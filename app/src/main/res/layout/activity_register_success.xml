<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="net.ricky.runningdead.RegisterSuccess">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView android:text="@string/registerSuccess"
            android:layout_centerHorizontal="true"
            android:textSize="32sp"
            android:layout_width="wrap_content"
            android:id="@+id/registerSuccess"
            android:layout_height="wrap_content" />

        <TextView android:text="@string/registerSuccessPrompt1"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:id="@+id/registerSuccessPrompt1" />

        <TextView android:text="@string/registerSuccessPrompt2"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:id="@+id/registerSuccessPrompt2" />


    </LinearLayout>
</RelativeLayout>
